Package: climaemet
Title: Climate AEMET Tools
Version: 1.2.1.9000
Authors@R: c(
    person("Manuel", "Pizarro", role = c("aut", "cph"),
           comment = c(ORCID = "0000-0002-6981-0154")),
    person("Diego", "Hernangómez", , "diego.hernangomezherrero@gmail.com", role = c("aut", "cre"),
